<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/x20"
    >

    <com.usamsl.global.view.CircleImageView
        android:id="@+id/ic_user"
        android:layout_width="@dimen/x91"
        android:layout_height="@dimen/x91"
        android:src="@drawable/ava"
        app:border_color="#f2f2f2"
        app:border_width="@dimen/x1"
        android:layout_gravity="center_vertical"
        />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x16"
        android:background="@drawable/bg_tv"
        android:gravity="center"
        android:paddingBottom="@dimen/x12"
        android:paddingLeft="@dimen/x16"
        android:paddingRight="@dimen/x16"
        android:paddingTop="@dimen/x12"
        android:text="111"
        android:textColor="@color/colorText" />


</LinearLayout>