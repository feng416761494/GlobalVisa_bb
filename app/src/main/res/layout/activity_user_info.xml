<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/userInfoBackGround">
    <RelativeLayout
        android:id="@+id/relativeTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x84"
        android:background="@drawable/bg_title"
        android:paddingRight="@dimen/x30">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/x30"
            android:paddingLeft="@dimen/x30"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人信息"
            android:textColor="@color/Black"
            android:textSize="@dimen/x32" />
        <TextView
            android:id="@+id/tvSave"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="@dimen/x30"
            android:text="保存"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/reilativeUserPhoto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y128"
        android:background="#ffffff"
        android:layout_below="@+id/relativeTitle"
        android:layout_marginTop="@dimen/y20">
        <com.usamsl.global.my.custom.CircleImageView
            android:id="@+id/imgUserPhoto"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y100"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:src="@drawable/user_info_user1"/>
        <TextView
            android:id="@+id/tvEditUserPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgUserPhoto"
            android:layout_marginLeft="@dimen/x29"
            android:text="修改头像"
            android:textColor="@color/beforeTextColor"
            android:textSize="@dimen/x24"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/imgUserInfoPoint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x30"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearUserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reilativeUserPhoto"
        android:layout_marginTop="@dimen/y20"
        android:orientation="vertical"
        android:background="#ffffff">
        <RelativeLayout
            android:id="@+id/relativeUserName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y86">
            <TextView
                android:id="@+id/tvUserNameHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="姓名"
                android:textColor="@color/beforeTextColor"
                android:textSize="@dimen/x26"
                android:layout_marginLeft="@dimen/x30"/>
            <ImageView
                android:id="@+id/imgPoint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x22"
                android:src="@drawable/user_info_right"
                android:visibility="invisible"/>
            <EditText
                android:id="@+id/editUserName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tvUserNameHint"
                android:layout_toLeftOf="@+id/imgPoint1"
                android:layout_marginRight="@dimen/x22"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="点击修改"
                android:textSize="@dimen/x26"
                android:textColor="@color/beforeTextColorGray"
                android:textColorHint="@color/beforeTextColorGray"
                android:textCursorDrawable="@null"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/x22"
                android:layout_marginLeft="@dimen/x22"
                android:background="@color/colorLine"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeUserGender"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y86">
            <TextView
                android:id="@+id/tvUserGenderHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="性别"
                android:textColor="@color/beforeTextColor"
                android:textSize="@dimen/x26"
                android:layout_marginLeft="@dimen/x30"/>
            <ImageView
                android:id="@+id/imgPoint2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x22"
                android:src="@drawable/user_info_right"/>
            <TextView
                android:id="@+id/tvUserSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/imgPoint2"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x22"
                android:text="点此选择"
                android:textSize="@dimen/x26"
                android:textColor="@color/beforeTextColorGray"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/x22"
                android:layout_marginLeft="@dimen/x22"
                android:background="@color/colorLine"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeUserProfession"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y86">
            <TextView
                android:id="@+id/tvUserProfessionHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="职业"
                android:textColor="@color/beforeTextColor"
                android:textSize="@dimen/x26"
                android:layout_marginLeft="@dimen/x30"/>
            <ImageView
                android:id="@+id/imgPoint3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x22"
                android:src="@drawable/user_info_right"/>
            <TextView
                android:id="@+id/tvUserProfession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/imgPoint3"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x22"
                android:text="点此选择"
                android:textSize="@dimen/x26"
                android:textColor="@color/beforeTextColorGray"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/x22"
                android:layout_marginLeft="@dimen/x22"
                android:background="@color/colorLine"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeUserPhoneNum"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y86">
            <TextView
                android:id="@+id/tvUserPhoneNumHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="手机号"
                android:textColor="@color/beforeTextColor"
                android:textSize="@dimen/x26"
                android:layout_marginLeft="@dimen/x30"/>
            <ImageView
                android:id="@+id/imgPoint4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x22"
                android:src="@drawable/user_info_right"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/editUserPhoneNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvUserPhoneNumHint"
                android:layout_toLeftOf="@+id/imgPoint4"
                android:layout_marginRight="@dimen/x22"
                android:textSize="@dimen/x26"
                android:textColor="#cbcbcb"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:text=""/>
            <!--<EditText
                android:id="@+id/editUserPhoneNum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tvUserPhoneNumHint"
                android:layout_toLeftOf="@+id/imgPoint4"
                android:layout_marginRight="@dimen/x22"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="点击修改"
                android:textSize="@dimen/x26"
                android:textColor="@color/beforeTextColorGray"
                android:textColorHint="@color/beforeTextColorGray"
                android:textCursorDrawable="@null"/>-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/x22"
                android:layout_marginLeft="@dimen/x22"
                android:background="@color/colorLine"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeUserEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y86"
            android:visibility="gone">
            <TextView
                android:id="@+id/tvUserEmailHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="邮箱"
                android:textColor="@color/beforeTextColor"
                android:textSize="@dimen/x26"
                android:layout_marginLeft="@dimen/x30"/>
            <ImageView
                android:id="@+id/imgPoint5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x22"
                android:src="@drawable/user_info_right"
                android:visibility="invisible"/>
            <EditText
                android:id="@+id/editUserEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tvUserEmailHint"
                android:layout_toLeftOf="@+id/imgPoint5"
                android:layout_marginRight="@dimen/x22"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="点击修改"
                android:textSize="@dimen/x26"
                android:textColor="@color/beforeTextColorGray"
                android:textColorHint="@color/beforeTextColorGray"
                android:textCursorDrawable="@null"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/x22"
                android:layout_marginLeft="@dimen/x22"
                android:background="@color/colorLine"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>