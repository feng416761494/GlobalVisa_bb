<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/x84"
       android:paddingLeft="@dimen/x30"
       android:paddingRight="@dimen/x30"
       android:background="@drawable/contacts_bg">
       <com.usamsl.global.view.CircleImageView
           android:id="@+id/img_photo"
           android:layout_width="@dimen/x64"
           android:layout_height="@dimen/x64"
           android:layout_centerVertical="true"/>
      <RelativeLayout
          android:id="@+id/rl"
          android:layout_toRightOf="@id/img_photo"
          android:layout_marginLeft="@dimen/x20"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true">
          <TextView
              android:id="@+id/tv_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/colorText"
              android:textSize="@dimen/x24"
              />
          <TextView
              android:id="@+id/tv_tel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/x24"
              android:textColor="@color/colorA6"
              android:layout_below="@id/tv_name"/>
      </RelativeLayout>
       <TextView
           android:id="@+id/tv_realName"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/colorA6"
           android:textSize="@dimen/x18"
           android:layout_alignParentRight="true"
           android:layout_alignBottom="@id/rl"
           />
   </RelativeLayout>
</RelativeLayout>