<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/x20">

    <com.usamsl.global.view.CircleImageView
        android:id="@+id/ic_user"
        app:border_color="#f2f2f2"
        app:border_width="@dimen/x1"
        android:layout_width="@dimen/x91"
        android:layout_height="@dimen/x91"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/user"
        />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x16"
        android:layout_toLeftOf="@+id/ic_user"
        android:background="@drawable/bg_tv"
        android:gravity="center"
        android:paddingBottom="@dimen/x12"
        android:paddingLeft="@dimen/x16"
        android:paddingRight="@dimen/x16"
        android:paddingTop="@dimen/x12"
        android:text="111"
        android:textColor="@color/colorText"
        />
</RelativeLayout>