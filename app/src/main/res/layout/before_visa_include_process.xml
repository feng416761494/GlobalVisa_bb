<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <TextView
        android:id="@+id/tvProcess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="办理流程"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y26"
        android:textSize="@dimen/x28"
        android:textColor="#404040"/>
    <LinearLayout
        android:id="@+id/lineaBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/relativeStep1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y23">
            <TextView
                android:id="@+id/tvStep1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x26"
                android:layout_marginTop="2dp"
                android:text="01"
                android:textSize="@dimen/x23"
                android:textColor="#bcd78e"/>
            <ImageView
                android:id="@+id/imgStep1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvStep1"
                android:layout_marginLeft="@dimen/x20"
                android:src="@drawable/step"/>
            <ImageView
                android:id="@+id/imgStep1Line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgStep1"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/imgStep1"
                android:layout_marginLeft="9.5dp"
                android:src="@drawable/line"/>
            <TextView
                android:id="@+id/tvStepDatum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgStep1"
                android:layout_toRightOf="@+id/imgStep1"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginTop="1dp"
                android:text="准备并上传资料，完善申请表"
                android:textSize="@dimen/x25"
                android:textColor="#404040"/>
            <TextView
                android:id="@+id/tvStep1DatumContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvStepDatum"
                android:layout_toRightOf="@+id/imgStep1"
                android:layout_marginTop="@dimen/y20"
                android:layout_alignLeft="@+id/tvStepDatum"
                android:text="准备资料后拍照上传,完善申请表"
                android:textSize="@dimen/x26"
                android:textColor="#808080"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeStep2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvStep2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x26"
                android:layout_marginTop="2dp"
                android:text="02"
                android:textSize="@dimen/x23"
                android:textColor="#bcd78e"/>
            <ImageView
                android:id="@+id/imgStep2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvStep2"
                android:layout_marginLeft="@dimen/x20"
                android:src="@drawable/step"/>
            <ImageView
                android:id="@+id/imgStep2Line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgStep2"
                android:layout_alignLeft="@+id/imgStep2"
                android:layout_marginLeft="9.5dp"
                android:src="@drawable/line"/>
            <TextView
                android:id="@+id/tvStep2Datum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgStep2"
                android:layout_toRightOf="@+id/imgStep2"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginTop="1dp"
                android:text="下单支付"
                android:textSize="@dimen/x25"
                android:textColor="#404040"/>
            <TextView
                android:id="@+id/tvStep2DatumContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvStep2Datum"
                android:layout_toRightOf="@+id/imgStep2"
                android:layout_marginTop="@dimen/y20"
                android:layout_alignLeft="@+id/tvStep2Datum"
                android:text="选择线上或线下支付"
                android:textSize="@dimen/x26"
                android:textColor="#808080"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeStep3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvStep3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x26"
                android:layout_marginTop="2dp"
                android:text="03"
                android:textSize="@dimen/x23"
                android:textColor="#bcd78e"/>
            <ImageView
                android:id="@+id/imgStep3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvStep3"
                android:layout_marginLeft="@dimen/x20"
                android:src="@drawable/step"/>
            <ImageView
                android:id="@+id/imgStep3Line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgStep3"
                android:layout_alignLeft="@+id/imgStep3"
                android:layout_marginLeft="9.5dp"
                android:src="@drawable/line"/>
            <TextView
                android:id="@+id/tvStep3Datum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgStep3"
                android:layout_toRightOf="@+id/imgStep3"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginTop="1dp"
                android:text="寄送资料"
                android:textSize="@dimen/x25"
                android:textColor="#404040"/>
            <TextView
                android:id="@+id/tvStep3DatumContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvStep3Datum"
                android:layout_toRightOf="@+id/imgStep3"
                android:layout_marginTop="@dimen/y20"
                android:layout_alignLeft="@+id/tvStep3Datum"
                android:text="选择附近的银行,方便材料递取"
                android:textSize="@dimen/x26"
                android:textColor="#808080"
                android:visibility="gone"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativeStep4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvStep4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x26"
                android:layout_marginTop="2dp"
                android:text="04"
                android:textSize="@dimen/x23"
                android:textColor="#bcd78e"/>
            <ImageView
                android:id="@+id/imgStep4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvStep4"
                android:layout_marginLeft="@dimen/x20"
                android:src="@drawable/step"/>
            <ImageView
                android:id="@+id/imgStep4Line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgStep4"
                android:layout_alignLeft="@+id/imgStep4"
                android:layout_marginLeft="9.5dp"
                android:src="@drawable/line"/>

            <TextView
                android:id="@+id/tvStep4Datum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgStep4"
                android:layout_toRightOf="@+id/imgStep4"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginTop="1dp"
                android:text="资料审核并送签"
                android:textSize="@dimen/x25"
                android:textColor="#404040"/>
            <TextView
                android:id="@+id/tvStep4DatumContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvStep4Datum"
                android:layout_toRightOf="@+id/imgStep4"
                android:layout_marginTop="@dimen/y20"
                android:layout_marginRight="@dimen/x20"
                android:layout_alignLeft="@+id/tvStep4Datum"
                android:text=""
                android:textSize="@dimen/x26"
                android:textColor="#808080"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativeStep5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvStep5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x26"
                android:layout_marginTop="2dp"
                android:text="05"
                android:textSize="@dimen/x23"
                android:textColor="#bcd78e"/>
            <ImageView
                android:id="@+id/imgStep5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvStep5"
                android:layout_marginLeft="@dimen/x20"
                android:src="@drawable/step"/>

            <TextView
                android:id="@+id/tvStep5Datum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgStep5"
                android:layout_toRightOf="@+id/imgStep5"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginTop="1dp"
                android:text="出签并配送"
                android:textSize="@dimen/x25"
                android:textColor="#404040"/>
            <TextView
                android:id="@+id/tvStep5DatumContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvStep5Datum"
                android:layout_toRightOf="@+id/imgStep5"
                android:layout_marginTop="@dimen/y20"
                android:layout_marginRight="@dimen/x20"
                android:layout_alignLeft="@+id/tvStep5Datum"
                android:text="选择3个自己空闲的工作日,我们会根据领馆的空闲日为您预约面试时间"
                android:textSize="@dimen/x26"
                android:textColor="#808080"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>