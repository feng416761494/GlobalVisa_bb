<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/y20"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:background="@drawable/contacts_bg"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/tv_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x24"
            android:textColor="@color/colorText"
            android:text="1.照片"
            />
        <TextView
            android:id="@+id/tv_necessary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x24"
            android:textColor="#bcd78e"
            android:layout_toRightOf="@id/tv_material"
            android:text="*"
            />

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_below="@id/tv_material"
            android:layout_width="@dimen/x154"
            android:layout_height="@dimen/y154"
            android:layout_marginTop="@dimen/y20"
            android:padding="@dimen/x2">
            <com.usamsl.global.index.util.XCRoundRectImageView1
                android:id="@+id/img_photo"
                android:layout_width="@dimen/x154"
                android:layout_height="@dimen/y154"
                android:scaleType="fitXY"
                android:src="@drawable/fail"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

            <com.usamsl.global.view.MyListView
                android:id="@+id/recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x38"
                android:divider="#00000000"
                android:dividerHeight="@dimen/x4"
                android:scrollbars="none"
                android:listSelector="#00000000"
                android:layout_alignTop="@id/rl"
                android:layout_toRightOf="@id/rl"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_fillIn"
            android:textSize="@dimen/x18"
            android:textColor="@color/colorFlagship"
            android:text="点此填写"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/x60"
            android:paddingTop="@dimen/x10"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>