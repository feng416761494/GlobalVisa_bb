<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/banTouMing"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

    <RelativeLayout
        android:id="@+id/reltive"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/isformsave_background">
        <TextView
            android:id="@+id/tvHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检测到您的账户,在另一台手机登陆。如果非本人操作请修改密码"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reltive"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPsdRecovery"
            android:layout_width="0dp"
            android:layout_height="@dimen/y84"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/isfromsave_no"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="@color/colorFlagship" />

        <TextView
            android:id="@+id/tvLoginAgin"
            android:layout_width="0dp"
            android:layout_height="@dimen/y84"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/isformsave_yes"
            android:gravity="center"
            android:text="重新登录"
            android:textColor="@color/colorFlagship" />

    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>