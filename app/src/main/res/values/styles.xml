        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/x26</item>
        <item name="android:textColor">@color/colorText</item>
    </style>
    <!--我的：我的订单样式-->
    <style name="myOrder" parent="myText">
        <item name="android:text">我的订单</item>
        <item name="android:background">@drawable/split_line</item>
    </style>
    <!--我的：我的联系人-->
    <style name="myContacts" parent="myText">
        <item name="android:text">联系人管理</item>

    </style>
    <!--我的：我的积分-->
    <style name="myPoint" parent="myText">
        <item name="android:text">关于我们</item>
    </style>
    <!--我的：关于我们-->
    <style name="mySecret" parent="myText">
        <item name="android:text">隐私政策</item>
        <item name="android:background">@drawable/split_line</item>
    </style>
    <!--我的：当前版本-->
    <style name="myVersion" parent="myText">
        <item name="android:text">当前版本</item>
    </style>
    <!--我的：个人设置-->
    <style name="mySetting" parent="myText">
        <item name="android:text">设置</item>
    </style>
    <!--我的:图片显示样式-->
    <style name="myImg">
        <item name="android:layout_marginLeft">@dimen/x30</item>
        <item name="android:layout_marginRight">@dimen/x20</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
