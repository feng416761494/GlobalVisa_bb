    <!-- 标签栏菜单主样式-->
    <style name="menu">
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">#3d4038</item>
        <item name="android:textSize">@dimen/x18</item>
    </style>
    <!--标签栏首页菜单样式-->
    <style name="indexMenu" parent="menu">
        <item name="android:text">首页</item>
        <item name="android:drawableTop">@drawable/index_checked</item>
    </style>
    <!--标签栏订单菜单样式-->
    <style name="orderMenu" parent="menu">
        <item name="android:text">订单</item>
        <item name="android:drawableTop">@drawable/order_checked</item>
    </style>
    <!--标签栏客服菜单样式-->
    <style name="serviceMenu" parent="menu">
        <item name="android:text">客服</item>
        <item name="android:drawableTop">@drawable/service_checked</item>
    </style>
    <!--标签栏我的菜单样式-->
    <style name="myMenu" parent="menu">
        <item name="android:text">我的</item>
        <item name="android:drawableTop">@drawable/my_checked</item>
    </style>
