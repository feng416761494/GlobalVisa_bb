    <!--*****************************************************-->
    <!--在职证明-->
    <!--提示-->
    <style name="jobStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/x24</item>
    </style>
    <!--输入-->
    <style name="etStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textSize">@dimen/x24</item>
        <item name="android:background">@null</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="dateStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textSize">@dimen/x24</item>
        <item name="android:background">@null</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
    </style>
    <!--我的操作弹窗-->
    <style name="noTitleDialog" parent="android:style/Theme.Dialog">
        <item name="android:width">@dimen/x600</item>
        <item name="android:height">@dimen/y80</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--身份证验证:按钮-->
    <style name="btnIdCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/y66</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/data_commit_bg1</item>
        <item name="android:layout_margin">@dimen/x30</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">@dimen/x26</item>
    </style>
    <!--身份证验证：身份证上面的的信息-->
    <style name="tvIdCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/x24</item>
        <item name="android:textColor">#a6a6a6</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="etIdCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/x24</item>
        <item name="android:textColor">#595959</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="etIdCard_new">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textSize">@dimen/x24</item>
        <item name="android:textColor">#595959</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!--身份证拍摄-->
    <style name="BtnIdCardTake">
        <item name="android:layout_width">@dimen/x160</item>
        <item name="android:layout_height">@dimen/y80</item>
        <item name="android:textSize">@dimen/x26</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_margin">@dimen/x10</item>
    </style>

    <!--签证详情界面领区字体大小-->
    <style name="tabTextSize">
        <item name="android:textSize">@dimen/x18</item>
    </style>
    <!--圆形图片-->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>
    <!--更新版本-->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/Transparent</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CustomDialogLoading" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/Transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <!-- 分享对话框样式 -->
    <style name="ShareDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>



    <!-- Base application theme. -->
    <style name="AppThemeNew" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Transparent</item>
        <item name="colorPrimaryDark">@color/Transparent</item>
        <item name="colorAccent">@color/Transparent</item>
    </style>

    <style name="AppThemeLogin" parent="AppThemeNew" />
</resources>
